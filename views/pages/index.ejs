<div class="container mt-5">
    <form method="POST" action="turno">
        <div class="row justify-content-center">
            <div class="col-md-4 containerInfo shadow rounded-lg mb-5">
                <div class="container mt-5 mb-5">
                    <p class="text-center">
                        <img src="/img/profile.png" alt="" width="50%">
                    </p>
                    <div class="form-group mt-4 ">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="Nombre" placeholder="Ingresar nombre" required>
                    </div>
                </div>
            </div>

            <div class="col-md-2"></div>

            <div class="col-md-6 containerInfo shadow rounded-lg mb-5">
                <div class="container mt-5">
                    <p class="text-center">Apertura de caja</p>
                    <div class="form-group">
                        <div class="row justify-content-center mb-3">
                            <div class="col-3">
                                <p>Dolares (USD)</p>
                            </div>
                            <div class="col-8">
                                <input name="usd" type="number" class="form-control"
                                    placeholder="Ingresa cantidad de USD" min="1" step="0.01" required>
                            </div>
                        </div>

                        <div class="row justify-content-center mb-4">
                            <div class="col-3">
                                <p>Pesos (MXN)</p>
                            </div>
                            <div class="col-8">
                                <input name="mxn" type="number" class="form-control"
                                    placeholder="Igresa cantidad de MXN" min="1" step="0.01" required>
                            </div>
                        </div>
                        <p class="text-center"><button type="submit" class="btn btn-primary">Iniciar
                                turno</button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>